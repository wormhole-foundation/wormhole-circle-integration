{
  "compilerOptions": {
    "outDir": "build",
    "types": ["node", "mocha", "chai"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["ES2022", "dom"],
    "module": "NodeNext",
    "target": "ES2022",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext"
  },
  "include": ["ts"]
}
